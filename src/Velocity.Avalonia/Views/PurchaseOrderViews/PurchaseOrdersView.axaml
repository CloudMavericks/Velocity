<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Velocity.Avalonia.ViewModels.PurchaseOrders"
             xmlns:views="clr-namespace:Velocity.Avalonia.Views.PurchaseOrderViews"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Velocity.Avalonia.Views.PurchaseOrderViews.PurchaseOrdersView"
             x:DataType="viewModels:PurchaseOrdersViewModel">
    <ContentControl Content="{Binding CurrentViewModel}">
        <ContentControl.DataTemplates>
            <DataTemplate x:DataType="{x:Type viewModels:PurchaseOrderTableViewModel}">
                <views:PurchaseOrderTableView />
            </DataTemplate>
            <DataTemplate x:DataType="{x:Type viewModels:AddPurchaseOrderViewModel}">
                <views:AddPurchaseOrderView />
            </DataTemplate>
            <DataTemplate x:DataType="{x:Type viewModels:EditPurchaseOrderViewModel}">
                <views:EditPurchaseOrderView />
            </DataTemplate>
        </ContentControl.DataTemplates>
    </ContentControl>
</UserControl>