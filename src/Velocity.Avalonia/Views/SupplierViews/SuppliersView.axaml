<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Velocity.Avalonia.ViewModels.Suppliers"
             xmlns:supplierViews="clr-namespace:Velocity.Avalonia.Views.SupplierViews"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Velocity.Avalonia.Views.SupplierViews.SuppliersView"
             x:DataType="viewModels:SupplierViewModel">
    <ContentControl Content="{Binding CurrentViewModel}">
        <ContentControl.DataTemplates>
            <DataTemplate DataType="{x:Type viewModels:SuppliersTableViewModel}">
                <supplierViews:SuppliersTableView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:AddSupplierViewModel}">
                <supplierViews:AddSupplierView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:EditSupplierViewModel}">
                <supplierViews:EditSupplierView />
            </DataTemplate>
        </ContentControl.DataTemplates>
    </ContentControl>
</UserControl>
