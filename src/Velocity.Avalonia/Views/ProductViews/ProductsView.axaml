<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:products="clr-namespace:Velocity.Avalonia.ViewModels.Products"
             xmlns:views="clr-namespace:Velocity.Avalonia.Views.ProductViews"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Velocity.Avalonia.Views.ProductViews.ProductsView"
             x:DataType="products:ProductsViewModel">
    <ContentControl Content="{Binding CurrentViewModel}">
        <ContentControl.DataTemplates>
            <DataTemplate DataType="{x:Type products:ProductsTableViewModel}">
                <views:ProductsTableView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type products:AddProductViewModel}">
                <views:AddProductView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type products:EditProductViewModel}">
                <views:EditProductView />
            </DataTemplate>
        </ContentControl.DataTemplates>
    </ContentControl>
</UserControl>
