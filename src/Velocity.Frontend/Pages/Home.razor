            <MudLink Href="/sales-invoices">Sales Invoices</MudLink>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="6" md="3">
        <MudCard Outlined Class="links pa-4 d-flex justify-center">
            <MudLink Href="/reports">Reports</MudLink>
        </MudCard>
    </MudItem>
</MudGrid>